document.querySelector('.answer-errors').innerHTML = '<%= render 'shared/errors', resource: @answer %>'

<% unless @answer.persisted? %>
  toRemove = document.getElementById('answer-<%= @answer.id %>')
  toRemove.parentNode.removeChild(toRemove)

  document.querySelector('.flash').innerHTML = '<%= render 'shared/flash' %>'
<% end %>
