oldBestAnswer = document.querySelector('.best-answer')
if (oldBestAnswer) oldBestAnswer.classList.remove('best-answer')

newBestAnswer = document.getElementById('answer-<%= @answer.id %>')
newBestAnswer.parentNode.removeChild(newBestAnswer)

document.querySelector('.answers').insertAdjacentHTML('afterbegin', '<%= render @question.best_answer, answer_class: 'best-answer' %>')
