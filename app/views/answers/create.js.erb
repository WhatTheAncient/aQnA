document.querySelector('.answer-errors').innerHTML = '<%= render 'shared/errors', resource: @answer %>'

<% if @answer.persisted? %>
  document.querySelector('.answers').insertAdjacentHTML('beforeend', '<%= render @answer, answer_class: nil %>')
  document.querySelector('.flash').innerHTML = '<%= render 'shared/flash' %>'

  newAnswerForm = document.querySelector('.new-answer-form')
  newAnswerForm.querySelectorAll('.text-field').forEach((field) => (field.value = ''))
  newAnswerForm.querySelector('.file-field').value = ''
<% end %>
